{
  "ConnectionStrings": {
    "MongoDB": "mongodb://localhost:27017",
    "Redis": "host.docker.internal:6379"

  },
  "Mongo": {
    "DatabaseName": "trading_system",
    "ConnectionString": "mongodb://localhost:27017"
  },
  "JwtSettings": {
    "Secret": "YourSecretKey32CharactersMinimum!",
    "Issuer": "MyTrade.Template",
    "Audience": "MyTrade.Users",
    "ExpirationMinutes": 60
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": { "restrictedToMinimumLevel": "Information" }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "UserManagementApp"
    }
  },
  "RateLimiter": {
    "Enabled": true,
    "RequestLimit": 100,
    "TimeWindowInSeconds": 60
  },

  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:5000"
      }
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}